{
  "name": "chatroom-spike",
  "version": "0.0.0",
  "description": "spike for the chatroom module of a social media website",
  "main": "./server.js",
  "scripts": {
    "server": "node ./dist-server/server.js",
    "help": "printf \"help\"",
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "transpile": "babel ./server --out-dir dist-server",
    "dev": "cross-env NODE_ENV=\"development\"; npm-run-all build server",
    "prod": "cross-env NODE_ENV=\"production\"; npm-run-all build server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "nobabel": "node ./server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olsonadr/webdev-final-project.git"
  },
  "author": "Nicholas Olson, Kyle Kanwischer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/olsonadr/chatroom-spike/issues"
  },
  "homepage": "https://github.com/olsonadr/chatroom-spike#readme",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/plugin-syntax-decorators": "^7.8.3",
    "@babel/plugin-transform-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "bufferutil": "^4.0.1",
    "cookie-parser": "^1.4.4",
    "cross-env": "^7.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.1",
    "express-session": "^1.17.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "pg": "^7.18.2",
    "public-ip": "^4.0.0",
    "regenerator-runtime": "^0.13.3",
    "rimraf": "^3.0.2",
    "sequelize": "^5.21.5",
    "socket.io": "^2.3.0",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.41.6"
  },
  "nodemonConfig": {
    "exec": "npm run nobabel",
    "watch": [
      "server/*",
      "public/*",
      "views/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-spread",
      [
        "@babel/plugin-syntax-decorators",
        {
          "legacy": false,
          "decoratorsBeforeExport": true
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1"
  }
}
